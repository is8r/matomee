- @body_class = 'scaffold'

%h1 Listing categories

%table
  %tr
    %th Name
    %th Sites
    %th
    %th
    %th

  - @categories.each do |category|
    %tr
      %td= link_to_category_id category.id
      %td= get_category_count category.id
      %td= link_to 'Show', category
      %td= link_to 'Edit', edit_category_path(category)
      %td= link_to 'Destroy', category, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Category', new_category_path, {class: 'btn btn-white'}
