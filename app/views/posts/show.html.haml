- @body_class = 'scaffold scaffold-show'

%p
  %b Site:
  = link_to_site_id @post.site_id
%p
  %b Title:
  = @post.title
%p
  %b Description:
  = @post.description
%p
  %b Url:
  = @post.url
%p
  %b Thumb:
  = image_tag(@post.thumb_url(:thumbnail), :width => 80, :height => 80)

= link_to 'Edit', edit_post_path(@post)
\|
= link_to 'Back', posts_path
