- @body_class = 'scaffold'

%h1 Listing sites

%table
  %tr
    %th Name
    %th Category
    %th Url
    %th Rss
    %th Active
    %th
    %th
    %th

  - @sites.each do |site|
    %tr
      %td= site.name
      %td= link_to_category_id site.category_id
      %td= site.url
      %td= site.rss
      %td= site.active
      %td= link_to 'Show', site
      %td= link_to 'Edit', edit_site_path(site)
      %td= link_to 'Destroy', site, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to new_site_path, {class: 'btn btn-white'} do
  New Site
